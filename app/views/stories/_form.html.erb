<% if @story.errors.any? %>
  <div class="alert alert-error">
    <h3>Not saved. Please correct these problems:</h3>
    <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <ul>
  </div>
<% end %>  

<%= form_for @story do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :text %>
  <%= f.text_field :text %>
  <%= f.label :genre_id %>
  <%= f.text_field :genre_id %>
  <%= f.submit :class => 'btn btn-primary' %>
<% end %>